<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />
    <title>时间选择</title>
    <link href="../../css/aui.css" rel="stylesheet" />
    <link href="../../css/common.css" rel="stylesheet" />
    <style>
        body, html {
            background: transparent;
        }

        #main {
            padding: 0;
            padding-top: 1em;
            position: relative;
        }

        .share-box {
            position: absolute;
            width: 90%;
            background-color: rgba(100,100,100,0.9);
            top: 40%;
            left: 50%;
            -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
            z-index: 2;
        }

        table {
            margin: 0 auto;
            width: 100%;
            text-align: center;
            color: #fff;
            font-size: 18px;
        }

        .shadow {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
        }

        #divButton div {
            float: left;
            width: 50%;
            text-align: center;
            height: 50px;
            border-top: 1px solid #e6e6e6;
            border-bottom: 1px solid #e6e6e6;
            line-height: 50px;
            color: #fff;
        }

            #divButton div:first-child {
                border-right: 1px solid #e6e6e6;
            }

        #tbTitle {
            border-bottom: 1px solid #e6e6e6;
            height: 50px;
        }
    </style>
</head>
<body>
    <div id="wrap">
        <div id="main">
            <div class="shadow" tapmode></div>
            <div class="share-box">
                <table id="tbTitle" style="display: none">
                    <tr>
                        <td class="aui-iconfont aui-icon-left" style="width: 40px;" id="tdPrev"></td>
                        <td id="tdTitle"></td>
                        <td class="aui-iconfont aui-icon-right" style="width: 40px;" id="tdNext"></td>
                    </tr>
                </table>
                <div id="divBody"></div>
                <div id="divButton">
                    <div id="divCancel">取消</div>
                    <div id="divSure">确认</div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="../../script/api.js"></script>
<script src="../../script/zepto.js"></script>
<script src="../../script/honesty.base.js"></script>
<script type="text/javascript">
    var UICustomPicker;
    var UICalendar;
    var _Date = "";
    var _Time = "";
    var arrType = new Array();
    var _ControlValue;
    apiready = function () {
        api.parseTapmode();
        $(function () {
            _ControlValue = api.pageParam.ControlValue.replace(/\-/g, "/") || $honesty.NowDate();
            _ControlValue = new Date(_ControlValue);

            //判断进行什么类型选择
            
            switch (api.pageParam.Type) {
                case "Date":
                    arrType = [true, false];
                    $("#tbTitle").css("display", "");
                    $("#divBody").height(220);
                    break;
                case "Time":
                    arrType = [false, true];
                    $("#divBody").height(70);
                    break;
                case "DateTime":
                    arrType = [true, true];
                    $("#tbTitle").css("display", "");
                    $("#divBody").height(250);
                    break;
                default:
                    arrType[false, false];
                    break;
            }
            setTimeout(function () {


                //日期控件
                if (arrType[0]) {
                    UICalendar = api.require('UICalendar');
                    UICalendar.open({
                        rect: {
                            x: $("#divBody").offset().left,
                            y: $("#tbTitle").offset().top + $("#tbTitle").height(),
                            w: $("#divBody").width(),
                            h: 220
                        },
                        styles: {
                            bg: 'rgba(0,0,0,0)',
                            week: {
                                weekdayColor: '#3b3b3b',
                                weekendColor: '#f1c40f',
                                size: 13
                            },
                            date: {
                                color: '#3b3b3b',
                                selectedColor: '#fff',
                                selectedBg: '#f1c40f',
                                size: 13
                            },
                            today: {
                                color: 'rgb(230,46,37)',
                                bg: ''
                            }
                        },
                        switchMode: "vertical",
                        fixedOn: api.frameName,
                        fixed: true
                    }, function (ret, err) {
                        if (ret) {
                            if (ret.eventType == "show") {
                                UICalendar.setDate({
                                    date: _ControlValue.Format("yyyy-MM-dd"),
                                    ignoreSelected: false
                                });
                                $("#tdTitle").html(_ControlValue.getFullYear() + "年" + (_ControlValue.getMonth() + 1) + "月");
                            }
                            if (ret.eventType == "normal") {
                                _Date = ret.year + "-" + (ret.month.toString().length == "1" ? "0" + ret.month : ret.month) + "-" + (ret.day.toString().length == "1" ? "0" + ret.day : ret.day);
                            }
                            if (ret.eventType == "switch") {
                                _Date = "";
                                $("#tdTitle").html(ret.year + "年" + ret.month + "月");
                            }
                        }
                    });

                    _Date = _ControlValue.Format("yyyy-MM-dd");
                }

                //时间控件
                if (arrType[1]) {
                    UICustomPicker = api.require('UICustomPicker');
                    UICustomPicker.open({
                        rect: {
                            x: $("#divBody").offset().left + 25,
                            y: $("#divBody").offset().top + (arrType[0] == true ? 180 : 0),
                            w: $("#divBody").width() - 50,
                            h: 70
                        },
                        styles: {
                            bg: 'rgba(0,0,0,0)',
                            normalColor: '#959595',
                            selectedColor: '#fff',
                            selectedSize: 30,
                            tagColor: '#f1c40f',
                            tagSize: 15
                        },
                        data: [{
                            tag: '时',
                            scope: '0-23'
                        }, {
                            tag: '分',
                            scope: '0-59'
                        }],
                        rows: 1,
                        fixedOn: api.frameName,
                        fixed: true
                    }, function (ret, err) {
                        if (ret) {
                            if (ret.eventType == "show") {
                                UICustomPicker.setValue({
                                    id: ret.id,
                                    data: [_ControlValue.getHours(), _ControlValue.getMinutes()]
                                });
                            }
                            if (ret.eventType == "selected") {
                                var arrTime = ret.data;
                                _Time = (arrTime[0].length == "1" ? "0" + arrTime[0] : arrTime[0]) + ":" + (arrTime[1].length == "1" ? "0" + arrTime[1] : arrTime[1]);
                            }
                        }
                    });

                    _Time = _ControlValue.Format("hh:mm")
                }
            }, 50);

            //日期往前一个月点击
            $("#tdPrev").tap(function () {
                UICalendar.prevMonth(function (ret) {
                    if (ret) {
                        _Date = "";
                        $("#tdTitle").html(ret.year + "年" + ret.month + "月");
                        if (ret.eventType == "normal") {
                            _Date = ret.year + "-" + (ret.month.toString().length == "1" ? "0" + ret.month : ret.month) + "-" + (ret.day.toString().length == "1" ? "0" + ret.day : ret.day);
                        }
                    }

                });
            });

            //日期往后一个月点击
            $("#tdNext").tap(function () {
                UICalendar.nextMonth(function (ret) {
                    if (ret) {
                        _Date = "";
                        $("#tdTitle").html(ret.year + "年" + ret.month + "月");
                        if (ret.eventType == "normal") {
                            _Date = ret.year + "-" + (ret.month.toString().length == "1" ? "0" + ret.month : ret.month) + "-" + (ret.day.toString().length == "1" ? "0" + ret.day : ret.day);
                        }
                    }
                });
            });

            //确认按钮点击
            $("#divSure").tap(function () {
                var retValue = "";
                if (arrType[0] && _Date == "") {
                    $honesty.ShowToast({ msg: "请选择日期" });
                    return false;
                }

                if (arrType[0]) {
                    retValue += _Date;
                }
                if (arrType[0] && arrType[1]) {
                    retValue += " ";
                }
                if (arrType[1]) {
                    retValue += _Time;
                }
                api.sendEvent({
                    name: 'SelectPage_DateTimeSelect',
                    extra: {
                        DateTime: retValue
                    }
                });
                api.closeFrame({ name: 'SelectPage_DateTimeSelect' });
            });

            //取消按钮点击
            $("#divCancel").tap(function () {
                api.closeFrame({ name: 'SelectPage_DateTimeSelect' });
            });
        });

    }
</script>
</html>
