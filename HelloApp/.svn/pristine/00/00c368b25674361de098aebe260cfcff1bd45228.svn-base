<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />
    <title>待办流程列表</title>
    <link href="../../../css/aui.css" rel="stylesheet" />
</head>
<body>
    <div class="aui-content">
        <ul class="aui-list-view" id="ulList">
        </ul>
    </div>
</body>
</html>

<script src="../../../script/zepto.js"></script>
<script src="../../../script/api.js"></script>
<script src="../../../script/honesty.base.js"></script>
<script type="text/javascript">
    var _PageNum = 1;
    apiready = function () {
        api.parseTapmode();
        $(function () {

            LoadData();
            //下拉刷新
            api.setRefreshHeaderInfo({
                visible: true,
                loadingImg: 'widget://image/refresh.png',
                bgColor: '#fff',
                textColor: '#000',
                textDown: '下拉刷新...',
                textUp: '松开刷新...',
                showTime: true
            }, function (ret, err) {
                $("#ulList").html("");
                _PageNum = 1;
                LoadData();
                api.refreshHeaderLoadDone();
            });

            api.addEventListener({
                name: 'scrolltobottom',
                extra: {
                    threshold: 60
                }
            }, function (ret, err) {
                LoadData();
            });
            api.addEventListener({
                name: "ReloadWorkFlow"
            }, function (ret, err) {
                $("#ulList").html("");
                _PageNum = 1;
                LoadData();
            });
        });
    }

    //数据加载函数
    function LoadData() {
        if (_PageNum != 0) {
            var _options = {
                PostData: {
                    Params: {
                        result: "GetNoWorkFlow",
                        ReceiveID: GetSession("UserID"),
                        FlowModel: "11",
                        StartDate: api.pageParam.StartDate,
                        EndDate: api.pageParam.EndDate,
                        Title: api.pageParam.Title || "",
                        SenderName: api.pageParam.Sender || "",
                        PageNum: _PageNum,
                        PageSize: 15
                    },
                    ProcName: "proc_HC_NoWorkFlow",
                    DataType: "DataTable",
                    ExecType: "PROC",
                    Mode: "MSSQL"
                }
            };


            $.when($honesty.AjaxChannel(_options)).done(function (_result) {
                if (_result.Code == "1") {
                    var _Content = "";
                    if (_result.Data.length > 0) {
                        $.each(_result.Data, function (i, item) {
                            _Content += "<li class='aui-list-view-cell' tapmode onclick=\'ShowFlowInfo(\"" +
                                        item.FlowID + "\",\"" +
                                        item.StepID + "\",\"" +
                                        item.InstanceID + "\",\"" +
                                        item.ID + "\",\"" +
                                        item.GroupID + "\",\"" +
                                        item.SN + "\",\"" +
                                        item.WAPFlowPage + "\",\"" +
                                        item.FlowName + "\")\'>" +
                                        "<a class='aui-arrow-right'><label>" + item.Title + "</label></a></li>";
                        });
                        _PageNum++;
                        $("#ulList").append(_Content);
                    }
                    else {
                        if (_PageNum == 1) {
                            $("#ulList").html("<li style='text-align:center'>尊敬的用户，您好，无待办流程</li>")
                        }
                        else {
                            $honesty.ShowToast({ msg: "没有更多的数据", location: "bottom" });
                        }
                        _PageNum = 0;
                    }
                    api.parseTapmode();
                }
            });
        }
    }

    //流程列表点击
    function ShowFlowInfo(flowid, stepid, instanceid, taskid, groupid, sn, flowPage, name) {
        var _options = {
            PostData: {
                Params: {
                    result: "CheckTaskID",
                    TaskID: taskid
                },
                ProcName: "proc_HC_WorkFlow",
                DataType: "Text",
                ExecType: "PROC",
                Mode: "MSSQL"
            }
        };
        $.when($honesty.AjaxChannel(_options)).done(function (_result) {
            if (_result.Code == "1") {
                if (_result.Data != "") {
                    $honesty.OpenWin({
                        name: flowPage.replace(/\//g, "_"),
                        url: flowPage + ".html",
                        title: name,
                        LevelNum: 2,
                        pageParam: {
                            flowid: flowid,
                            stepid: stepid,
                            instanceid: instanceid,
                            taskid: taskid,
                            groupid: groupid,
                            sn: sn
                        }
                    });
                }
                else {
                    $honesty.ConfirmWin({
                        msg: "该流程已经处理，是否刷新列表?",
                        buttons: ["是", "否"],
                        callback: function (ret, err) {
                            if (ret.buttonIndex == "1") {
                                $("#ulList").html("");
                                _PageNum = 1;
                                LoadData();
                            }
                        }
                    })
                }
            }


        });

    }
</script>
